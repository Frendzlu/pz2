<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - lab09</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lab09.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav>
        <ul>
            @if (Context.Session.GetString("zalogowany") == "true")
            {
                <li><a asp-controller="IO" asp-action="Panel">Panel</a></li>
                <li><a asp-controller="Dane" asp-action="Index">Dane</a></li>
            }
            else
            {
                <li><a asp-controller="IO" asp-action="Logowanie">Logowanie</a></li>
            }
        </ul>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - lab09 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>