@{
    ViewData["Title"] = "Logowanie";
}
<h2>Logowanie</h2>
<form method="post">
    <label>Login:</label>
    <input name="login" />
    <br />
    <label>Hasło:</label>
    <input type="password" name="haslo" />
    <br />
    <button type="submit">Zaloguj</button>
</form>
@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
